---
/**
 * Admin - Session List Page
 * 
 * Displays list of chat sessions with filtering by account/agent.
 * Provides quick access to session details for debugging.
 */

// Server-side fetch (initial load)
const apiUrl = import.meta.env.PUBLIC_API_URL || 'http://localhost:8000';

// Initial data will be loaded client-side by Preact component
---

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin - Sessions | OpenThought</title>
</head>
<body class="bg-gray-50">
    <div class="min-h-screen">
        <!-- Header -->
        <header class="bg-white shadow-sm">
            <div class="max-w-7xl mx-auto px-4 py-4 sm:px-6 lg:px-8">
                <h1 class="text-2xl font-bold text-gray-900">Admin - Chat Sessions</h1>
                <p class="mt-1 text-sm text-gray-500">Browse and debug chat sessions</p>
            </div>
        </header>

        <!-- Main Content -->
        <main class="max-w-7xl mx-auto px-4 py-6 sm:px-6 lg:px-8">
            <!-- Session Filters Component (Preact) -->
            <div id="session-filters"></div>
        </main>
    </div>

    <!-- Load Preact Component -->
    <script>
        import { h, render } from 'preact';
        import { SessionFilters } from '../../components/admin/SessionFilters';

        const container = document.getElementById('session-filters');
        if (container) {
            render(h(SessionFilters, { apiUrl: import.meta.env.PUBLIC_API_URL || 'http://localhost:8000' }), container);
        }
    </script>
</body>
</html>

