---
import WyckoffLayout from '../../layouts/WyckoffLayout.astro';
import SuggestedQuestions from '../../components/wyckoff/SuggestedQuestions.astro';

const suggestedQuestions = [
  "Find me a Spanish-speaking cardiologist",
  "Show me neurology specialists",
  "Which doctors accept Medicare?",
  "Find a doctor who treats diabetes",
  "Do you have female cardiologists?",
  "Find a pediatrician in neurology"
];
---
<WyckoffLayout title="Find a Doctor - Wyckoff Hospital">
  <section style="padding:2rem 0;">
    <h1 style="font-size:2.5rem;margin:0 0 1rem;color:#01579B;">Find a Doctor</h1>
    <p style="font-size:1.2rem;margin:0 0 2rem;color:#555;line-height:1.6;">
      Search our network of board-certified physicians and specialists. Our doctors are experts in their fields 
      and committed to providing exceptional, compassionate care.
    </p>

    <div style="margin:3rem 0;padding:2rem;background:linear-gradient(135deg, #E0F7FA 0%, #B2EBF2 100%);border-radius:12px;border-left:4px solid #00838F;">
      <h2 style="font-size:1.5rem;margin:0 0 1rem;color:#01579B;">ðŸ’¬ Use Our AI-Powered Doctor Search</h2>
      <p style="margin:0 0 1.5rem;line-height:1.6;color:#01579B;">
        Simply describe what you're looking for using the chat widget below. You can search by:
      </p>
      <ul style="margin:0 0 1.5rem;padding-left:1.5rem;line-height:2;color:#01579B;">
        <li><strong>Specialty:</strong> "Find me a cardiologist" or "Show me orthopedic surgeons"</li>
        <li><strong>Language:</strong> "Spanish-speaking doctors" or "Doctors who speak Mandarin"</li>
        <li><strong>Insurance:</strong> "Which doctors accept Medicare?" or "Doctors that take Blue Cross"</li>
        <li><strong>Conditions:</strong> "Doctors who treat diabetes" or "Specialists in migraine treatment"</li>
        <li><strong>Gender preference:</strong> "Female cardiologists" or "Male neurologists"</li>
      </ul>
      <p style="margin:0;line-height:1.6;color:#01579B;font-weight:600;">
        ðŸ‘‡ Click the chat icon in the lower right corner or try one of the suggested questions below!
      </p>
    </div>

    <SuggestedQuestions questions={suggestedQuestions} />

    <div style="margin:3rem 0;">
      <h2 style="font-size:1.8rem;margin:0 0 1.5rem;color:#0277BD;">Our Specialties</h2>
      <div style="display:grid;grid-template-columns:repeat(auto-fit, minmax(200px, 1fr));gap:1rem;">
        <div style="padding:1rem;background:#f8fbff;border-left:3px solid #0277BD;border-radius:6px;">
          <strong style="color:#0277BD;">Cardiology</strong>
        </div>
        <div style="padding:1rem;background:#f8fbff;border-left:3px solid #0277BD;border-radius:6px;">
          <strong style="color:#0277BD;">Neurology</strong>
        </div>
        <div style="padding:1rem;background:#f8fbff;border-left:3px solid #0277BD;border-radius:6px;">
          <strong style="color:#0277BD;">Orthopedics</strong>
        </div>
        <div style="padding:1rem;background:#f8fbff;border-left:3px solid #0277BD;border-radius:6px;">
          <strong style="color:#0277BD;">Pediatrics</strong>
        </div>
        <div style="padding:1rem;background:#f8fbff;border-left:3px solid #0277BD;border-radius:6px;">
          <strong style="color:#0277BD;">Oncology</strong>
        </div>
        <div style="padding:1rem;background:#f8fbff;border-left:3px solid #0277BD;border-radius:6px;">
          <strong style="color:#0277BD;">Gastroenterology</strong>
        </div>
        <div style="padding:1rem;background:#f8fbff;border-left:3px solid #0277BD;border-radius:6px;">
          <strong style="color:#0277BD;">Pulmonology</strong>
        </div>
        <div style="padding:1rem;background:#f8fbff;border-left:3px solid #0277BD;border-radius:6px;">
          <strong style="color:#0277BD;">Endocrinology</strong>
        </div>
        <div style="padding:1rem;background:#f8fbff;border-left:3px solid #0277BD;border-radius:6px;">
          <strong style="color:#0277BD;">Dermatology</strong>
        </div>
        <div style="padding:1rem;background:#f8fbff;border-left:3px solid #0277BD;border-radius:6px;">
          <strong style="color:#0277BD;">Psychiatry</strong>
        </div>
        <div style="padding:1rem;background:#f8fbff;border-left:3px solid #0277BD;border-radius:6px;">
          <strong style="color:#0277BD;">Family Medicine</strong>
        </div>
        <div style="padding:1rem;background:#f8fbff;border-left:3px solid #0277BD;border-radius:6px;">
          <strong style="color:#0277BD;">Internal Medicine</strong>
        </div>
      </div>
    </div>

    <div style="margin:3rem 0;">
      <h2 style="font-size:1.8rem;margin:0 0 1rem;color:#0277BD;">Languages Spoken</h2>
      <div style="padding:1.5rem;background:white;border:2px solid #E0F7FA;border-radius:8px;">
        <p style="margin:0 0 1rem;line-height:1.6;">Our physicians and staff speak multiple languages including:</p>
        <div style="display:flex;flex-wrap:wrap;gap:0.75rem;">
          <span style="padding:0.5rem 1rem;background:#E0F7FA;border-radius:20px;color:#01579B;font-weight:500;">English</span>
          <span style="padding:0.5rem 1rem;background:#E0F7FA;border-radius:20px;color:#01579B;font-weight:500;">Spanish</span>
          <span style="padding:0.5rem 1rem;background:#E0F7FA;border-radius:20px;color:#01579B;font-weight:500;">Mandarin</span>
          <span style="padding:0.5rem 1rem;background:#E0F7FA;border-radius:20px;color:#01579B;font-weight:500;">Russian</span>
          <span style="padding:0.5rem 1rem;background:#E0F7FA;border-radius:20px;color:#01579B;font-weight:500;">Polish</span>
          <span style="padding:0.5rem 1rem;background:#E0F7FA;border-radius:20px;color:#01579B;font-weight:500;">Arabic</span>
          <span style="padding:0.5rem 1rem;background:#E0F7FA;border-radius:20px;color:#01579B;font-weight:500;">French</span>
          <span style="padding:0.5rem 1rem;background:#E0F7FA;border-radius:20px;color:#01579B;font-weight:500;">Haitian Creole</span>
        </div>
      </div>
    </div>

    <div style="margin:3rem 0;padding:2rem;background:#fff3cd;border-left:4px solid #ff9800;border-radius:8px;">
      <h3 style="margin:0 0 1rem;color:#856404;">ðŸ“‹ Need to Schedule an Appointment?</h3>
      <p style="margin:0 0 1rem;line-height:1.6;color:#856404;">
        After finding the right doctor, please call our scheduling department at <strong>(555) 123-4580</strong> 
        to book an appointment. You can also ask our chat assistant for help with scheduling!
      </p>
      <p style="margin:0;line-height:1.6;color:#856404;">
        <strong>Hours:</strong> Monday-Friday, 8:00 AM - 6:00 PM
      </p>
    </div>
  </section>
</WyckoffLayout>

