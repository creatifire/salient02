---
import WindriverLayout from '../../../layouts/WindriverLayout.astro';
import SuggestedQuestions from '../../../components/windriver/SuggestedQuestions.astro';

const suggestedQuestions = [
  "Tell me about your cardiology department",
  "Do you have heart failure specialists?",
  "What cardiac imaging services do you offer?",
  "Find me a cardiologist who speaks Spanish"
];
---
<WindriverLayout title="Cardiology Department - Windriver Hospital">
  <section style="padding:2rem 0;">
    <nav style="margin-bottom:1.5rem;">
      <a href="/windriver/departments" style="color:#2E7D32;text-decoration:none;font-weight:500;">‚Üê Back to Departments</a>
    </nav>

    <h1 style="font-size:2.5rem;margin:0 0 1rem;color:#1B5E20;">Cardiology Department</h1>
    <p style="font-size:1.2rem;margin:0 0 2rem;color:#555;line-height:1.6;">
      Comprehensive heart and vascular care with board-certified cardiologists and state-of-the-art technology.
    </p>

    <div style="margin:3rem 0;">
      <h2 style="font-size:1.8rem;margin:0 0 1.5rem;color:#2E7D32;">Our Services</h2>
      <div style="display:grid;grid-template-columns:repeat(auto-fit, minmax(280px, 1fr));gap:1.5rem;">
        <div style="padding:1.5rem;background:#f1f8e9;border-left:4px solid #2E7D32;border-radius:8px;">
          <h3 style="margin:0 0 0.75rem;color:#2E7D32;">ü©∫ Diagnostic Services</h3>
          <ul style="margin:0;padding-left:1.25rem;line-height:1.8;color:#555;">
            <li>Echocardiography (2D, 3D, stress echo)</li>
            <li>Electrocardiography (EKG/ECG)</li>
            <li>Holter monitoring</li>
            <li>Cardiac CT and MRI</li>
            <li>Nuclear stress testing</li>
          </ul>
        </div>

        <div style="padding:1.5rem;background:#f1f8e9;border-left:4px solid #00695C;border-radius:8px;">
          <h3 style="margin:0 0 0.75rem;color:#00695C;">‚ù§Ô∏è Treatment Services</h3>
          <ul style="margin:0;padding-left:1.25rem;line-height:1.8;color:#555;">
            <li>Cardiac catheterization</li>
            <li>Angioplasty and stenting</li>
            <li>Pacemaker implantation</li>
            <li>Heart failure management</li>
            <li>Arrhythmia treatment</li>
          </ul>
        </div>

        <div style="padding:1.5rem;background:#f1f8e9;border-left:4px solid #2E7D32;border-radius:8px;">
          <h3 style="margin:0 0 0.75rem;color:#2E7D32;">üî¨ Specialized Care</h3>
          <ul style="margin:0;padding-left:1.25rem;line-height:1.8;color:#555;">
            <li>Preventive cardiology</li>
            <li>Lipid management</li>
            <li>Hypertension treatment</li>
            <li>Cardiac rehabilitation</li>
            <li>Women's heart health</li>
          </ul>
        </div>
      </div>
    </div>

    <div style="margin:3rem 0;padding:2rem;background:#E8F5E9;border-radius:12px;border-left:4px solid #00695C;">
      <h2 style="font-size:1.5rem;margin:0 0 1rem;color:#1B5E20;">Meet Our Cardiologists</h2>
      <p style="margin:0 0 1rem;line-height:1.6;color:#1B5E20;">
        Our team includes board-certified cardiologists with expertise in interventional cardiology, 
        electrophysiology, heart failure, and preventive cardiology. Many of our physicians are fluent 
        in multiple languages including Spanish, Mandarin, and Russian.
      </p>
      <a href="/windriver/find-a-doctor" style="display:inline-block;background:#2E7D32;color:white;padding:0.75rem 1.5rem;border-radius:6px;text-decoration:none;font-weight:600;margin-top:0.5rem;">
        Find a Cardiologist
      </a>
    </div>

    <div style="margin:3rem 0;">
      <h2 style="font-size:1.8rem;margin:0 0 1rem;color:#2E7D32;">Patient Information</h2>
      <div style="padding:1.5rem;background:white;border:2px solid #E8F5E9;border-radius:8px;">
        <p style="margin:0 0 1rem;line-height:1.6;"><strong>Hours:</strong> Monday-Friday, 8:00 AM - 6:00 PM</p>
        <p style="margin:0 0 1rem;line-height:1.6;"><strong>Location:</strong> Main Hospital, 3rd Floor, Cardiology Wing</p>
        <p style="margin:0 0 1rem;line-height:1.6;"><strong>Phone:</strong> (555) 123-4567</p>
        <p style="margin:0;line-height:1.6;"><strong>Emergency:</strong> For cardiac emergencies, please call 911 or visit our Emergency Department.</p>
      </div>
    </div>

    <SuggestedQuestions questions={suggestedQuestions} />
  </section>
</WindriverLayout>

