    fontFamily: '"Times New Roman", Times, serif',  // Times Roman serif font
    fontSize: '16px',  // Default font size
    headerColor: '#2E7D32',  // AgroFresh green matching navbar/footer
    userBubbleColor: '#ffd54f',  // Yellow/amber for user messages
    botBubbleColor: '#F1F8E9',  // Light green-yellow for bot messages
    chatBackgroundColor: '#FFFFFF',  // White background
    fabColor: '#2E7D32'  // FAB button matches header color
  };
</script>
