---
interface Props {
  questions: string[];
}

const { questions } = Astro.props;
---

<div class="suggested-questions" style="margin:2rem 0;padding:1.5rem;background:#E8F5E9;border-radius:8px;border-left:4px solid #00695C;">
  <h3 style="margin:0 0 1rem;font-size:1.1rem;color:#1B5E20;">ðŸ’¬ Try asking:</h3>
  <div style="display:flex;flex-direction:column;gap:0.75rem;">
    {questions.map((question) => (
      <button 
        class="suggested-question-btn"
        data-question={question}
        style="background:white;border:2px solid #00695C;border-radius:6px;padding:0.75rem 1rem;text-align:left;cursor:pointer;transition:all 0.2s;color:#1B5E20;font-size:0.95rem;"
      >
        {question}
      </button>
    ))}
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const buttons = document.querySelectorAll('.suggested-question-btn');
    buttons.forEach(btn => {
      btn.addEventListener('click', () => {
        const question = btn.getAttribute('data-question');
        if (question) {
          // Trigger chat widget with this question
          // Check if widget is loaded and has methods to set message
          const event = new CustomEvent('salient:sendMessage', { detail: { message: question } });
          window.dispatchEvent(event);
        }
      });
    });
  });
</script>

<style>
  .suggested-question-btn:hover {
    background: #E8F5E9 !important;
    transform: translateX(4px);
    box-shadow: 0 2px 8px rgba(0, 105, 92, 0.2);
  }
  
  .suggested-question-btn:active {
    transform: translateX(2px);
  }
</style>

