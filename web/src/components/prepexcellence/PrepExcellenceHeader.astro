---
const current = Astro.url.pathname;
const baseLinkCls = 'font-semibold opacity-80 hover:opacity-100 transition-colors';
---
<nav class="navbar-bg" style="padding:.5rem 1rem;">
  <div style="max-width:1200px;margin:0 auto;display:flex;gap:1rem;align-items:center;flex-wrap:wrap;">
    <a href="/prepexcellence" class={`${baseLinkCls} ${current === '/prepexcellence' || current === '/prepexcellence/' ? 'opacity-100' : ''}`} aria-current={current === '/prepexcellence' || current === '/prepexcellence/' ? 'page' : undefined} style="color:var(--color-secondary-foreground);text-decoration:none;font-weight:700;">PrepExcellence</a>
    <a href="/prepexcellence/about" class={`${baseLinkCls} ${current.startsWith('/prepexcellence/about') ? 'opacity-100' : ''}`} aria-current={current.startsWith('/prepexcellence/about') ? 'page' : undefined} style="color:var(--color-secondary-foreground);text-decoration:none;">About</a>
    <a href="/prepexcellence/courses" class={`${baseLinkCls} ${current.startsWith('/prepexcellence/courses') ? 'opacity-100' : ''}`} aria-current={current.startsWith('/prepexcellence/courses') ? 'page' : undefined} style="color:var(--color-secondary-foreground);text-decoration:none;">Courses</a>
    <a href="/prepexcellence/tutoring" class={`${baseLinkCls} ${current.startsWith('/prepexcellence/tutoring') ? 'opacity-100' : ''}`} aria-current={current.startsWith('/prepexcellence/tutoring') ? 'page' : undefined} style="color:var(--color-secondary-foreground);text-decoration:none;">Tutoring</a>
    <a href="/prepexcellence/admissions" class={`${baseLinkCls} ${current.startsWith('/prepexcellence/admissions') ? 'opacity-100' : ''}`} aria-current={current.startsWith('/prepexcellence/admissions') ? 'page' : undefined} style="color:var(--color-secondary-foreground);text-decoration:none;">Admissions</a>
    <a href="/prepexcellence/contact" class={`${baseLinkCls} ${current.startsWith('/prepexcellence/contact') ? 'opacity-100' : ''}`} aria-current={current.startsWith('/prepexcellence/contact') ? 'page' : undefined} style="color:var(--color-secondary-foreground);text-decoration:none;">Contact</a>
  </div>
</nav>

